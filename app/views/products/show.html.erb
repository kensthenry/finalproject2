<h1><%= @product.title %></h1>

<p><strong> Description | </strong><%= @product.body %></p>

<% if @product.image.attached %>
<%= image_tag(@product.image) %>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= ling_to "Buy", purchase_path(@product)
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Add a comment or complaint:</h2>
<% @product.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add another comment or complaint:</h2>
<%= form_with model: [ @product, @product.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>