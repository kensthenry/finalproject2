<%= form_with model: product do |form| %>
  <div>Product Title 
    <br>
    <%= form.text_field :title %>
    
  </div>

  <div>Product Description
    <br>
    <%= form.text_area :body %><br>
    
  </div>

  <div>Product Price
    <br>
    <%= form.number_field :price %><br>
    
  </div>

  <div>Product Stock 
    <br>
    <%= form.number_field :stock %><br>
    
  </div>

  <div>Product Image
    <br>
    <%= form.text_field :image %><br>
    
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
